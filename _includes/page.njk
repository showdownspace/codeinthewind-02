<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <link rel="stylesheet" href="/style/output.css">
  </head>
  <body class="bg-slate-900 text-white">
    <div class="mx-auto max-w-5xl px-4 py-6">
      <h1 class="mb-6 pb-1 border-b border-b-slate-700 text-slate-500">Code in the Wind - Challenge Site</h1>
      <div class="prose prose-invert max-w-none">
        {{ content | safe }}
      </div>
    </div>
    <script>
      for (const em of document.querySelectorAll('.objectives em')) {
        if (em.textContent.startsWith("/images/")) {
          em.textContent = window.location.origin + em.textContent;
        }
        em.onclick = () => {
          const selection = window.getSelection();
          selection.removeAllRanges()
          selection.selectAllChildren(em)
          document.execCommand('copy')
        }
        em.classList.add('click-to-copy')
      }
    </script>
  </body>
</html>